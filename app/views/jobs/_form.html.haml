= simple_form_for(@job, html: { class: 'form-horizontal'}) do |f|
	= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category"}, input_html: {class: "dropdown-toggle"}
	= f.input :title, label: "Job Title", input_html: {class: "dropdown-toggle"}
	= f.input :description, label: "Job Description", input_html: {class: "dropdown-toggle"}
	= f.input :company, label: "Company Name", input_html: {class: "dropdown-toggle"}
	= f.input :url, label: "Link to job", input_html: {class: "dropdown-toggle"}
	%br/

	= f.button :submit
	
